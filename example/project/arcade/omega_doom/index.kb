FUNCTION "drawStats", sector$, location$, tactical$, tactical_style$, shields$, shields_style$, shields_status$, shields_status_style$
    DIV "controls-stats"
        TABLE
            TBODY
                TROW
                    TCELL ,"controls-stats-label"
                        PRINT "SECTOR"
                    END TCELL
                    TCELL
                        PRINT sector$
                    END TCELL
                END TROW
                TROW
                    TCELL ,"controls-stats-label"
                        PRINT "LOCATION"
                    END TCELL
                    TCELL
                        PRINT location$
                    END TCELL
                END TROW
                TROW
                    TCELL ,"controls-stats-label"
                        PRINT "TACTICAL"
                    END TCELL
                    TCELL
                        PRINT tactical$, tactical_style$
                    END TCELL
                END TROW
                TROW
                    TCELL ,"controls-stats-label"
                        PRINT "SHIELDS"
                    END TCELL
                    TCELL
                        PRINT shields$, shields_style$
                        PRINT "&nbsp;"
                        PRINT "[", shields_status_style$
                        PRINT shields_status$, shields_status_style$
                        PRINT "]", shields_status_style$
                    END TCELL
                END TROW
            END TBODY
        END TABLE
    END DIV
END FUNCTION

ADEF game_process$="game-intro"
ADEF current_process$="game-intro-1"
ADEF loading%=1
ADEF in_game%=0
ADEF controls_locked%=1
ADEF speech_text$=""
ADEF user_input%=0
ADIM user_input_enabled$=[]
ADIM user_input_disabled$=[]
ADEF speaking%=0
IFE _GET("progress") THEN
    ADEF skip_intro%=0
    JAVASCRIPT
        $("#intro").fadeIn(2000, () => {
            controls_locked=0;
            showIntroButtons(event);
        });
    END JAVASCRIPT
ELSE
    ADEF skip_intro%=1
    JAVASCRIPT
        $("#intro").fadeIn(2000, () => {
            controls_locked=0;
            continueGame(event);
        });
    END JAVASCRIPT
END IF
ADEF save$=""

AFUNCTION "startNewGame"
    if (!skip_intro) {
        $("#btn_start .button-message").addClass("selected");
        $("#omega-doom-intro").fadeOut(
            "2000",
            () => {
                $("#omega-doom-game").fadeIn(
                    "2000",
                    () => {
                        $("#btn_start .button-message").removeClass("selected");
                        in_game = 1;
                        progressSpeech(event, "game-progress-1");
                    }
                );
            }
        );
    } else {
        window.location.href = "/arcade/omega-doom";
    }
END AFUNCTION

AFUNCTION "continueGame"
    $("#btn_continue .button-message").addClass("selected");
    $("#omega-doom-intro").fadeOut(
        "2000",
        () => {
            $("#omega-doom-game").fadeIn(
                "2000",
                () => {
                    $("#btn_continue .button-message").removeClass("selected");
                    in_game = 1;
                    controls_locked=0;
                    progressSpeech(event, "game-progress-1");
                }
            );
        }
    );
END AFUNCTION

AFUNCTION "invalidButton", "speech"
    $("#" + current_process + " .original").html(speech);
    progressSpeech(event, current_process, null);
END AFUNCTION

AFUNCTION "saveAndQuit", "progress=null"
    console.log("Saving", progress);
    $("#intro-controls-buttons").css("display", "none");
    $("#omega-doom-game").fadeOut(
        "2000",
        () => {
            $("#omega-doom-intro").fadeIn(
                "2000",
                () => {
                    if (progress) {
                        window.location.href = "/arcade/omega-doom?progress=" + progress;
                    } else {
                        in_game = 0;
                        controls_locked=0;
                        showIntroButtons(event);
                    }
                }
            );
        }
    );
END AFUNCTION

AFUNCTION "progressSpeech", "next_id", "prev_id"
    speaking=1;
    if (prev_id) {
        current_process = prev_id;
    } else if (next_id) {
        current_process = next_id;
    }

    if (user_input_enabled.includes(current_process)) {
        user_input = 1;
    } else if (user_input_disabled.includes(current_process)) {
        user_input = 0;
    }

    await sleep(10);
    $("#omega-doom .btn-continue .button-message").removeClass("selected");
    $("#omega-doom .btn-previous .button-message").removeClass("selected");
    
    $("#omega-doom .progress .game-progress").hide();
    $("#omega-doom #" + current_process + " .speech p span").html("");
    $("#omega-doom .progress #" + current_process).css("display", "flex");

    speech_text = $("#omega-doom #" + current_process + " .original").html();
    if (speech_text) {
        var iLoop=0;
        while (speech_text[iLoop]) {
            $("#omega-doom #" + current_process + " .speech p span").append(speech_text[iLoop]);
            await sleep(10);
            iLoop++;
        }
    }
    speaking=0;
END AFUNCTION

AFUNCTION "nextProgress"
    speech_text = "";
    $("#" + current_process + " .btn-continue .button-message").addClass("selected");
    var splits = current_process.split("-");
    current_process = "";
    splits.forEach((str) => {
        if (parseInt(str)) {
            current_process += (parseInt(str)+1)
        } else {
            current_process += str + "-"
        }
    });
END AFUNCTION
AFUNCTION "prevProgress"
    speech_text = "";
    $("#" + current_process + " .btn-continue .button-message").addClass("selected");
    var splits = current_process.split("-");
    current_process = "";
    splits.forEach((str) => {
        if (parseInt(str)) {
            current_process += (parseInt(str)-1)
        } else {
            current_process += str + "-"
        }
    });
END AFUNCTION

AFUNCTION "showIntroButtons"
    if (!loading && !controls_locked) {
        $("#intro-controls-buttons").css("display", "flex");
    }
END AFUNCTION

AFUNCTION "userInput"
    if (user_input_enabled.includes(current_process)) {
        user_input = 1;
    } else if (user_input_disabled.includes(current_process)) {
        user_input = 0;
    }
END AFUNCTION

KEYBOARDEVENT "enter"
    GOTO userInput()
    IFE controls_locked THEN
        IF in_game && !user_input THEN
            IF save THEN
                GOTO saveAndQuit(save)
            ELSE
                GOTO nextProgress()
                GOTO progressSpeech(current_process, null, user_input)
            END IF
                
        END IF
    END IF
END KEYBOARDEVENT

KEYBOARDEVENT "p"
    GOTO userInput()
    IFE controls_locked THEN
        IF in_game THEN
            GOTO prevProgress()
            GOTO progressSpeech(null, current_process, user_input)
        END IF
    END IF
END KEYBOARDEVENT

KEYBOARDEVENT "n"
    GOTO userInput()
    IFE controls_locked THEN
        IFE in_game THEN
            GOTO startNewGame()
        END IF
    END IF
END KEYBOARDEVENT

KEYBOARDEVENT "c"
    GOTO userInput()
    IFE controls_locked THEN
        IFE in_game THEN
            GOTO continueGame()
        END IF
    END IF
END KEYBOARDEVENT

SCREEN "omega-doom-game"
    IFE _GET("progress") THEN
        LOAD "_ROOT/project/arcade/omega_doom/intro"
    ELSE
        LOAD "_ROOT/project/arcade/omega_doom/_GET("progress")"
    END IF
END SCREEN
SCREEN "omega-doom-intro"
    WINDOW "intro"
        GOTO loadGFX("_ROOT/kytschi/omega_doom/gfx/intro/game-title7.gfx")
    END WINDOW
    DIV ,"intro-controls"
        DIV ,"intro-controls-buttons"
            BUTTON "btn_continue",,"btn_continue",,,"continueGame()"
                PRINT "["
                PRINT "c","button_key"
                PRINT "]", "button_key_end" 
                PRINT "Continue game", "button-message"
            END BUTTON
            BUTTON "btn_start",,"btn_start",,,"startNewGame()"
                PRINT "["
                PRINT "n","button_key"
                PRINT "]", "button_key_end" 
                PRINT "New game", "button-message"
            END BUTTON
        END DIV
    END DIV
END SCREEN
