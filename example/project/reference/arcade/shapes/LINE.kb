LANG "en"
HEAD
	INCLUDE arcade
	LOAD "_ROOT/project/shared/head"
	NAME "LINE statment | kytschBASIC"
END HEAD
BODY
LOAD "_ROOT/project/shared/header"
	MAIN
		DIV "kb-row";"main-content"
			DIV "kb-col kb-col-24";"main-content-col"
				SWRITE
					PRINT "LINE";"heading-command basic"
					LINE BREAK
					PRINT "X1; Y1; X2; Y2";"heading-args"
					LINE BREAK
					PRINT "Requires arcade library";"heading-required"
				END SWRITE
				SWRITE
					PRINT "The ability to draw a line on a bitmap and display it on screen as an image."
				END SWRITE
				HEADING 3
					PRINT "Example"
				END HEADING 3
				CPRINT
INCLUDE arcade
RGB 0;0;0
BITMAP 0;0;640;480
	RGB 255;0;0
	LINE 200;220;300;320
	LINE 300;120;200;220
	LINE 300;120;400;220
	LINE 400;220;300;320

	RGB 255;0;0;40
	LINE 260;220;330;290
	LINE 260;220;330;150

	RGB 255;0;0;60
	LINE 290;220;345;275
	LINE 290;220;345;165

	RGB 255;0;0;80
	LINE 320;220;360;260
	LINE 320;220;360;180

	RGB 255;0;0;90
	LINE 350;220;375;245
	LINE 350;220;375;195

	RGB 255;0;0;95
	LINE 380;220;390;230
	LINE 380;220;390;210
END BITMAP
				END CPRINT
				HEADING 4
					PRINT "Output"
				END HEADING 4
				RGB 0;0;0
				BITMAP 0;0;640;480
					RGB 255;0;0
					LINE 200;220;300;320
					LINE 300;120;200;220
