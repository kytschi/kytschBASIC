							END TCELL
							TCELL
								PRINT "integer"
							END TCELL
							TCELL
								PRINT "X2 or the end X position"
							END TCELL
						END TROW
						TROW
							TCELL ;"table-parameter"
								PRINT "Y2"
							END TCELL
