LANG "en"
HEAD
	INCLUDE arcade
	LOAD "_ROOT/project/shared/head"
	NAME "ARCF statment | kytschBASIC"
HEAD CLOSE
BODY
LOAD "_ROOT/project/shared/header"
	MAIN
		DIV "kb-row";"main-content"
			DIV "kb-col kb-col-24";"main-content-col"
				SWRITE
					PRINT "ARCF";"heading-command basic"
					LINE BREAK
					PRINT "X; Y; RADIUS; START ANGLE; END ANGLE; STYLE";"heading-args"
					LINE BREAK
					PRINT "Requires arcade library";"heading-required"
				SWRITE CLOSE
				SWRITE
					PRINT "The ability to draw an filled arc on a bitmap and display it on screen as an image."
				SWRITE CLOSE
				HEADING 3
					PRINT "Example"
				HEADING CLOSE 3
				CPRINT
INCLUDE arcade
RGB 0;0;0
BITMAP 0;0;640;480
	RGB 255;0;0
	ARCF 180;190;140;20;310;0

	ARC 390;180;100;180;360
	LINE 340;181;340;230
	LINE 440;181;440;230
	ARC 350;230;20;360;180
	ARC 370;230;20;180;360
	ARC 390;230;20;360;180
	ARC 410;230;20;180;360
	ARC 430;230;20;360;180

	RGB 255;255;255
	CIRCLEF 385;170;20
	CIRCLEF 415;170;20

	RGB 0;0;0
	CIRCLEF 385;170;10
	CIRCLEF 415;170;10
BITMAP CLOSE
				CPRINT CLOSE
				HEADING 4
					PRINT "Output"
				HEADING CLOSE 4
				RGB 0;0;0
				BITMAP 0;0;640;480
					RGB 255;0;0
					ARCF 180;190;140;20;310;0

					ARC 390;180;100;180;360
					LINE 340;181;340;230
					LINE 440;181;440;230
					ARC 350;230;20;360;180
					ARC 370;230;20;180;360
					ARC 390;230;20;360;180
					ARC 410;230;20;180;360
					ARC 430;230;20;360;180

					RGB 255;255;255
					CIRCLEF 385;170;20
					CIRCLEF 415;170;20

					RGB 0;0;0
					CIRCLEF 385;170;10
					CIRCLEF 415;170;10
				BITMAP CLOSE
				HEADING 4
					PRINT "Parameters"
				HEADING CLOSE 4
				TABLE
					THEAD
						TROW
							THEADCELL "140px"
								PRINT "Parameter"
							THEADCELL CLOSE
							THEADCELL "200px"
								PRINT "Type"
							THEADCELL CLOSE
							THEADCELL
								PRINT "Description"
							THEADCELL CLOSE
						TROW CLOSE
					THEAD CLOSE
					TBODY
						TROW
							TCELL ;"table-parameter"
								PRINT "X"
							TCELL CLOSE
							TCELL
								PRINT "integer"
							TCELL CLOSE
							TCELL
								PRINT "X position"
							TCELL CLOSE
						TROW CLOSE
						TROW
							TCELL ;"table-parameter"
								PRINT "Y"
							TCELL CLOSE
							TCELL
								PRINT "integer"
							TCELL CLOSE
							TCELL
								PRINT "Y position"
							TCELL CLOSE
						TROW CLOSE
						TROW
							TCELL ;"table-parameter"
								PRINT "RADIUS"
							TCELL CLOSE
							TCELL
								PRINT "integer"
							TCELL CLOSE
							TCELL
								PRINT "Radius of the arc"
							TCELL CLOSE
						TROW CLOSE
						TROW
							TCELL ;"table-parameter"
								PRINT "START ANGLE"
							TCELL CLOSE
							TCELL
								PRINT "integer"
							TCELL CLOSE
							TCELL
								PRINT "Start angle of the arc, can have negative values"
							TCELL CLOSE
						TROW CLOSE
						TROW
							TCELL ;"table-parameter"
								PRINT "END ANGLE"
							TCELL CLOSE
							TCELL
								PRINT "integer"
							TCELL CLOSE
							TCELL
								PRINT "End angle of the arc, can have negative values"
							TCELL CLOSE
						TROW CLOSE
						TROW
							THEADCELL ;"table-parameter";3
								PRINT "Optional"
							THEADCELL CLOSE
						TROW CLOSE
						TROW
							TCELL ;"table-parameter"
								PRINT "STYLE"
							TCELL CLOSE
							TCELL
								PRINT "integer"
							TCELL CLOSE
							TCELL
								PRINT "PIE = 0 (default)"
								LINE BREAK
								PRINT "CHORD = 1"
								LINE BREAK
								PRINT "NOFILL = 2"
								LINE BREAK
								PRINT "EDGED = 4"
							TCELL CLOSE
						TROW CLOSE
					TBODY CLOSE
				TABLE CLOSE
				HEADING 4
					PRINT "See also"
				HEADING CLOSE 4
				DIV "kb-col kb-col-24";"see-also"
					LINK "/reference/ARC"
						PRINT "ARC"
