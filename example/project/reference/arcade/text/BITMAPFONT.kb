LANG "en"
HEAD
	INCLUDE arcade
	LOAD "$ROOT_FOLDER/project/shared/head"
	NAME "BITMAPFONT statment | kytschBASIC"
HEAD CLOSE
BODY
	MAIN
		LOAD "$ROOT_FOLDER/project/shared/header"
		DIV "kb-row", "main-content"
			DIV "kb-col kb-col-24", "main-content-col"
				SWRITE
					PRINT "BITMAPFONT","heading-command basic"
					LINE BREAK
					PRINT "FONT"
					LINE BREAK
					PRINT "Requires arcade library","heading-required"
				SWRITE CLOSE
				SWRITE
					PRINT "The ability to use a font when writing on a bitmap."
				SWRITE CLOSE
				HEADING 3
					PRINT "Example"
				HEADING CLOSE
				CPRINT
SCREEN "the-traveller",800,600
	WINDOW "intro"
		RGB 0,0,0
		BITMAP 0,0,800,400
			RGB 255,0,0
			BITMAPFONT "$ROOT_FOLDER/kytschi/fonts/8bitOperatorPlus8-Regular.ttf"
			BITMAPTEXT 220,150,32,0,75,"The Traveller"
			BITMAPTEXT 235,320,18,0,75,"Press any key to start"
		BITMAP CLOSE
	WINDOW CLOSE
	WINDOW "input"
		RGB 0,0,0
		BITMAP 0,0,800,200
			RGB 255,0,0
			LINE 0,0,800,0
		BITMAP CLOSE
	WINDOW CLOSE
SCREEN CLOSE
				CPRINT CLOSE
				HEADING 4
					PRINT "Output"
				HEADING CLOSE
				SCREEN "the-traveller",800,600
					WINDOW "intro"
						RGB 0,0,0
						BITMAP 0,0,800,400
							RGB 255,0,0
							BITMAPFONT "$ROOT_FOLDER/kytschi/fonts/8bitOperatorPlus8-Regular.ttf"
							BITMAPTEXT 220,150,32,0,75,"The Traveller"
							BITMAPTEXT 235,320,18,0,75,"Press any key to start"
						BITMAP CLOSE
					WINDOW CLOSE
					WINDOW "input"
						RGB 0,0,0
						BITMAP 0,0,800,200
							RGB 255,0,0
							LINE 0,0,800,0
						BITMAP CLOSE
					WINDOW CLOSE
				SCREEN CLOSE
				HEADING 4
					PRINT "Parameters"
				HEADING CLOSE
				TABLE
					THEAD
						TROW
							THEADCELL "140px"
								PRINT "Parameter"
							THEADCELL CLOSE
							THEADCELL "200px"
								PRINT "Type"
							THEADCELL CLOSE
							THEADCELL
								PRINT "Description"
							THEADCELL CLOSE
						TROW CLOSE
					THEAD CLOSE
					TBODY
						TROW
							TCELL ,"table-parameter"
								PRINT "FONT"
							TCELL CLOSE
							TCELL
								PRINT "string"
							TCELL CLOSE
							TCELL
								PRINT "Font to load"
							TCELL CLOSE
						TROW CLOSE
					TBODY CLOSE
				TABLE CLOSE
				HEADING 4
					PRINT "See also"
				HEADING CLOSE
				DIV "kb-col kb-col-24", "see-also"
					LINK "/reference/ARC"
						PRINT "ARC"
					LINK CLOSE
					PRINT "&comma;&nbsp;"
					LINK "/reference/ARCF"
						PRINT "ARCF"
					LINK CLOSE
					PRINT "&comma;&nbsp;"
					LINK "/reference/BITMAP"
						PRINT "BITMAP"
					LINK CLOSE
					PRINT "&comma;&nbsp;"
					LINK "/reference/BITMAPTEXT"
						PRINT "BITMAPTEXT"
					LINK CLOSE
					PRINT "&comma;&nbsp;"
					LINK "/reference/BOX"
						PRINT "BOX"
					LINK CLOSE
					PRINT "&comma;&nbsp;"
					LINK "/reference/BOXF"
						PRINT "BOXF"
					LINK CLOSE
					PRINT "&comma;&nbsp;"
					LINK "/reference/CIRCLE"
						PRINT "CIRCLE"
					LINK CLOSE
					PRINT "&comma;&nbsp;"
					LINK "/reference/CIRCLEF"
						PRINT "CIRCLEF"
					LINK CLOSE
					PRINT "&comma;&nbsp;"
					LINK "/reference/ELLIPSE"
						PRINT "ELLIPSE"
					LINK CLOSE
					PRINT "&comma;&nbsp;"
					LINK "/reference/ELLIPSEF"
						PRINT "ELLIPSEF"
					LINK CLOSE
					PRINT "&comma;&nbsp;"
					LINK "/globals"
						PRINT "Globals"
					LINK CLOSE
					PRINT "&comma;&nbsp;"
					LINK "/reference/LINE"
						PRINT "LINE"
					LINK CLOSE
					PRINT "&comma;&nbsp;"
					LINK "/reference/RGB"
						PRINT "RGB"
					LINK CLOSE
				DIV CLOSE
			DIV CLOSE
		DIV CLOSE
	MAIN CLOSE
	LOAD "$ROOT_FOLDER/project/shared/footer"
BODY CLOSE
END
