LANG "en"
HEAD
	INCLUDE arcade
	LOAD "_ROOT/project/shared/head"
	NAME "BITMAPTEXT statment | kytschBASIC"
END HEAD
BODY
LOAD "_ROOT/project/shared/header"
	MAIN
		DIV "kb-row";"main-content"
			DIV "kb-col kb-col-24";"main-content-col"
				SWRITE
					PRINT "BITMAPTEXT";"heading-command basic"
					LINE BREAK
					LINE BREAK
					PRINT "TEXT; SIZE; ANGLE; X; Y";"heading-args"
					LINE BREAK
					PRINT "Requires arcade library";"heading-required"
				END SWRITE
				SWRITE
					PRINT "The ability to write text on a bitmap."
				END SWRITE
				HEADING 3
					PRINT "Example"
				END HEADING 3
				CPRINT
SCREEN "the-traveller";800;600
	WINDOW "intro"
		RGB 0;0;0
		BITMAP 0;0;800;400
			RGB 255;0;0
			BITMAPFONT "_ROOT/kytschi/fonts/8bitOperatorPlus8-Regular.ttf"
			BITMAPTEXT "The Traveller";32;0;220;150
			BITMAPTEXT "Press any key to start";18;0;235;320
		END BITMAP
	END WINDOW
	WINDOW "input"
		RGB 0;0;0
		BITMAP 0;0;800;200
			RGB 255;0;0
			LINE 0;0;800;0
		END BITMAP
	END WINDOW
END SCREEN
				END CPRINT
				HEADING 4
					PRINT "Output"
				END HEADING 4
				SCREEN "the-traveller";800;600
					WINDOW "intro"
						RGB 0;0;0
						BITMAP 0;0;800;400
							RGB 255;0;0
							BITMAPFONT "_ROOT/kytschi/fonts/8bitOperatorPlus8-Regular.ttf"
							BITMAPTEXT "The Traveller";32;0;220;150
							BITMAPTEXT "Press any key to start";18;0;235;320
						END BITMAP
					END WINDOW
					WINDOW "input"
						RGB 0;0;0
						BITMAP 0;0;800;200
							RGB 255;0;0
							LINE 0;0;800;0
						END BITMAP
					END WINDOW
				END SCREEN
				HEADING 4
					PRINT "Parameters"
				END HEADING 4
				TABLE
					THEAD
						TROW
							THEADCELL "140px"
								PRINT "Parameter"
							END THEADCELL
							THEADCELL "200px"
								PRINT "Type"
							END THEADCELL
							THEADCELL
								PRINT "Description"
							END THEADCELL
						END TROW
					TEND HEAD
					TBODY
						TROW
							TCELL ;"table-parameter"
								PRINT "TEXT"
							END TCELL
							TCELL
								PRINT "string"
							END TCELL
							TCELL
								PRINT "Text to be written on the bitmap"
							END TCELL
						END TROW
					END TBODY
				END TABLE
				HEADING 4
					PRINT "See also"
				END HEADING 4
				DIV "kb-col kb-col-24";"see-also"
					LINK "/reference/ARC"
						PRINT "ARC"
					END LINK
					PRINT " | "
					LINK "/reference/ARCF"
						PRINT "ARCF"
					END LINK
					PRINT " | "
					LINK "/reference/BITMAP"
						PRINT "BITMAP"
					END LINK
					PRINT " | "
					LINK "/reference/BITMAPFONT"
						PRINT "BITMAPFONT"
					END LINK
					PRINT " | "
					LINK "/reference/BOX"
						PRINT "BOX"
					END LINK
					PRINT " | "
					LINK "/reference/BOXF"
						PRINT "BOXF"
					END LINK
					PRINT " | "
					LINK "/reference/CIRCLE"
						PRINT "CIRCLE"
					END LINK
					PRINT " | "
					LINK "/reference/CIRCLEF"
						PRINT "CIRCLEF"
					END LINK
					PRINT " | "
					LINK "/reference/ELLIPSE"
						PRINT "ELLIPSE"
					END LINK
					PRINT " | "
					LINK "/reference/ELLIPSEF"
						PRINT "ELLIPSEF"
					END LINK
					PRINT " | "
					LINK "/globals"
						PRINT "Globals"
					END LINK
					PRINT " | "
					LINK "/reference/LINE"
						PRINT "LINE"
					END LINK
					PRINT " | "
					LINK "/reference/RGB"
						PRINT "RGB"
					END LINK
				END DIV
			END DIV
		END DIV
	LOAD "_ROOT/project/shared/footer"
	END MAIN
END BODY
END
